{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@angular-workspace/shared/button": ["shared/src/index.ts"],
      "@angular-workspace/shared/ui": ["shared/src/index.ts"],
      "@angular-workspace/ui": ["ui/src/index.ts"],
      "@angular-workspace/auth/*": ["features/auth/*"],
      "@angular-workspace/dashboard/*": ["features/dashboard/*"],
      "@features/*": ["features/*"],
      "@shared/*": ["shared/*"],
      "@one-platform/*": ["one-platform/*"],
      "@shared/ui/layouts/*": ["shared/ui/layouts/*"],
      "@sections/*": ["sections/*"],
      "@pages/*": ["pages/*"],
      "@shared/language-switcher": ["shared/ui/language-switcher/language-switcher.component.ts"],
      "@shared/language-switcher/*": ["shared/ui/language-switcher/*"],
      "@shared/types/interfaces": ["shared/types/interfaces/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
